percentage($decimal)
  ( ceil($decimal * 100) ) %
html
  overflow-y scroll
body
  font-family 'ns', 'メイリオ', Meiryo, 'ヒラギノ角ゴ Pro W3', 'Hiragino Kaku Gothic Pro', Osaka, 'ＭＳ Ｐゴシック', 'MS PGothic', Arial, Helvetica, Verdana, sans-serif
  overflow hidden

p,div
  margin 0 0 0 0
  padding 0 0 0 0
img
  max-width 100%
  height auto
  vertical-align middle
a
  text-decoration none
  .on
    display none

#load
  width 100%
  height 100%
  position fixed
  background #fff
  z-index 100000000
  top 0
  left 0
#loadinner
  width 100%
  height 100%
  position fixed
  z-index 100000001

@media only screen and (min-width: 1001px)
  a
    &:hover
      .on
        display inline
      .off
        display none

@media only screen and (max-width: 1000px)
  body
    background-size 100%
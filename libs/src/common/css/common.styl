@import '../../__utility/css/base/_reset'
@import '../../__utility/css/base/_font'
@import '../../__utility/css/base/_nav'
@import '../../__utility/css/modules/_module'
/*! common.css */
html
  overflow-y scroll
body
  font-family 'ns', 'メイリオ', Meiryo, 'ヒラギノ角ゴ Pro W3', 'Hiragino Kaku Gothic Pro', Osaka, 'ＭＳ Ｐゴシック', 'MS PGothic', Arial, Helvetica, Verdana, sans-serif
  overflow hidden

img
  max-width 100%
  height auto
  vertical-align middle
a
  text-decoration none
  .on
    display none


#load
  width 100%
  height 100%
  position fixed
  background #fff
  z-index 100000000
  top 0
  left 0
#loadinner
  width 100%
  height 100%
  position fixed
  z-index 100000001

body
  background #ddd

header
  width 100%
  text-align center
  background white
  padding 10px 0

main
  width 100%
  background #fff
  border-top 1px solid #111
  padding 500px 10px

footer
  width 100%
  color #fff
  text-align center
  background black
  padding 10px 0

@media only screen and (min-width: 1001px)
  a
    &:hover
      .on
        display inline
      .off
        display none

@media only screen and (max-width: 1000px)
  body
    background-size 100%
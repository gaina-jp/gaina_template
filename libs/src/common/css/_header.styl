@import '../../__utility/css/modules/_module.styl'
@media only screen and (min-width: 751px)
  .hide-window
    overflow hidden
  header
    width 100%
    background #fff
    position fixed
    top 0
    z-index 3
  .logo
    display inline-block
    position relative
    z-index 1
  .navigation
    height 100%
    position absolute
    top 0
    bottom 0
    right 0
    left 0
    z-index 0
    .nav-inner
      width 20em
      box-sizing border-box
      transition all 100ms 100ms $easeinout
      position absolute
      top 0
      right -20em
      //transform translateX(100%)
      z-index 4
    .navi-inner-open
      right 0
    .navi
      a
        display block
        color #505456
        background #fafafa
        border-bottom 1px solid #e5e5e5
        padding 20px 0 20px 4px
        transition all 250ms
        span
          vertical-align middle
        svg
          width 50px
          height 40px
          fill #505456
          vertical-align middle
          transition all 100ms 100ms $easeinout
          margin 0 10px
        &:hover
          color #222
          background #fff
          svg
            transform scale(1.4)
    /*for num in (1..9)
      .navi{num}
        a
          svg
            width 50px
            height 40px
            fill #505456
            vertical-align middle
            transition all 100ms 100ms $easeinout
          &:hover
            svg
              transform scale(1.2)*/
    &~
      header,
      main,
      footer
        position relative
        z-index 1
      .navi-btn-open
        //animation 200ms $easeinout 100ms 1 normal forwards appearRightToLeft
        right 20em
    .navi-btn
      background #fff
      position absolute
      top 0
      right 0
      cursor pointer
      transition all 100ms 100ms $easeinout
      z-index 1001
      .open
        display block
      .close
        display none
    .navi-bg
      display none
      position absolute
      top 0
      bottom 0
      right 0
      left 0
      z-index 0
  .navigation.navi-open
    display block
    width 100%
    height 100%
    position fixed
    background rgba(100,100,100,.7)
    overflow-y scroll
    overflow-x hidden
    z-index 1000
    .navi-bg
      display block
      position absolute
      top 0
      bottom 0
      right 0
      left 0
      z-index 0
    .navi-btn
      background #fafafa
      border-right 1px solid #e5e5e5
      right 20em
      .open
        display none
      .close
        display block


@media only screen and (max-width: 750px)
  .hide-window
    overflow hidden
  header
    width 100%
    background #fff
    position fixed
    top 0
    z-index 3
  .logo
    display block
    w-percentage(360/$sw)
    margin 0 auto
    position relative
    z-index 1
  .navigation
    height 100%
    position absolute
    top 0
    bottom 0
    right 0
    left 0
    z-index 0
    .nav-inner
      clearfix()
      width 100%
      display none
      box-sizing border-box
      transition all 100ms 100ms $easeinout
      position absolute
      //transform translateX(100%)
      z-index 4
    .navi-inner-open
      background #fff
      border-top 1px solid #e5e5e5
      margin percentage(120/$sw) 0 0 0

    .navi
      float left
      width 50%
      a
        f-vieww(20/$sw)
        display block
        color #505456
        border-bottom 1px solid #e5e5e5
        padding percentage(30/375) 0 percentage(30/375) percentage(10/375)
        transition all 250ms
        span
          vertical-align middle
        svg
          w-percentage(64/375)
          height vieww(50/$sw)
          fill #505456
          vertical-align middle
          transition all 100ms 100ms $easeinout
          margin 0 0 0 0

      &:nth-child(odd)
        a
          border-right 1px solid #e5e5e5
    .navi-btn-open
      //animation 200ms $easeinout 100ms 1 normal forwards appearRightToLeft
      right 20em
    .navi-btn
      w-percentage(132/$sw)
      background #fff
      position absolute
      top 0
      right 0
      cursor pointer
      transition all 100ms 100ms $easeinout
      z-index 1001
      .open
        display block
      .close
        display none
    .navi-bg
      display none
  .navigation.navi-open
    display block
    width 100%
    height 100%
    position fixed
    overflow-y scroll
    overflow-x hidden
    z-index 1000
    .nav-inner
      display block
    .navi-btn
      .open
        display none
      .close
        display block
    .navi-bg
      display block
      background rgba(100,100,100,.7)
      margin percentage(120/$sw) 0 0 0
      position absolute
      top 0
      bottom 0
      right 0
      left 0
      z-index 0
    &~
      .logo
        z-index 1001

@keyframes appearRightToLeft
  0%
    transform scale(1)
  20%
    transform scale(0.9)
  90%
    transform scale(1.2)
  100%
    transform scale(1)

